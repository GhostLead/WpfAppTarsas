<Window x:Class="WpfAppTarsas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTarsas"
        mc:Ignorable="d"
        Title="Társas Játék" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lbSzerkeszto" Height="350" Margin=" 0 -40 0 0"/>
        <Button x:Name="btnMentesmaskent" Content="Mentés másként" Click="btnMentesMaskent_Click" Width="100" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Left"  Margin=" 120 0 0 0"/>
        <Button x:Name="btnMentes" Content="Mentés" Width="100" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="btnMentes_Click"/>
        <Button x:Name="btnBetoltes" Content="Betöltés" Click="btnBetoltes_Click" Width="100" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Left"  Margin=" 240 0 0 0"/>
        <Button x:Name="btnUjOsveny" Content="Új Ösvény" Click="btnUjOsveny_Click" Width="100" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <Button x:Name="btnTorles" Content="Ösvény törlése" Width="100" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin=" 0 0 120 0 " Click="btnTorles_Click"/>
    </Grid>
</Window>
